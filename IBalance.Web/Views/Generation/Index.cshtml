@model IBalance.Domain.ViewModels.GenerationRequestVM

@{
    ViewBag.Title = "Генерация";
    Layout = "~/Views/Layouts/_LayoutPage1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <script src="@Url.Content("~/Content/js/generation.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/combobox.js")" type="text/javascript"></script>
</head>
<body>
    <div class="container" style="margin-left: 140px; width: 80%">
        <div class="row">
            <button type="button" class="btn btn-info btn-lg pull-right" style="margin-bottom:5%;" id="generate">Запустить генерацию</button>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label>Выберите продукт</label>
            </div>
            <div class="col-md-3">
                <label>Контрагенты</label>
            </div>
            <div class="col-md-3">
                <label>Количество кодов</label>
            </div>
            <div class="col-md-3">
                <label>Номер партии</label>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <select id="productsCombobox">
                    <option value="">Выбрать...</option>
                    @foreach (var product in Model.Products)
                    {
                        <option id="product_@product.Id" value="@product.Model - @product.ProductionDate">@product.Model - @product.ProductionDate</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <select id="counterpartiesCombobox">
                    <option value="">Выбрать...</option>
                    @foreach (var counterparty in Model.Counterparties)
                    {
                        <option id="counterparty_@counterparty.Id" value="@counterparty.Name">@counterparty.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <input type="number" id="codesNumber" min="1" />
            </div>
            <div class="col-md-3">
                <input type="text" id="consignmentNumber" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-10" id="codeList">

            </div>
        </div>
        <div class="row">
            <div class="col-md-5">
                <a href="/Generation/Download" class="btn btn-info btn-lg pull-right" style="display: none;" id="download">Выгрузить</a>
            </div>
        </div>
    </div>
</body>
</html>

