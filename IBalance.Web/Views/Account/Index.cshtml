
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Вход</title>
    <link href="@Url.Content("~/Content/libs/bootstrap-3.3.7-dist/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/libs/jquery-ui-1.12.1/jquery-ui.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/libs/jquery/jquery-3.2.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/libs/bootstrap-3.3.7-dist/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Content/libs/jquery-ui-1.12.1/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/login.js")" type="text/javascript"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <h1 class="text-center login-title">Войти в личный кабинет</h1>
                <div class="account-wall">
                    <form class="form-signin">
                        <input type="text" class="form-control" id="login" placeholder="Логин" required autofocus>
                        <input type="password" class="form-control" id="password" placeholder="Пароль" required>
                        <button class="btn btn-lg btn-primary btn-block" type="button" id="enter">
                            Войти
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
